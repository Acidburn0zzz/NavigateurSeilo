QDialog,
QMenu,
QTabWidget::pane
{
  	border: none;
	background: scolor(main);
  	color: scolor(text);
}

QMainWindow
{
	background: scolor(main);
  	background-image: url(images/background.png);
}

QTreeWidget,
QTreeView,
QTableWidget,
QTableView,
QListView,
QListWidget {
  background: scolor(main);
  alternate-background-color: scolor(main, dark);
  color: scolor(text);
}

QTextBrowser {
  border: none;
  background: rgba(0, 0, 0,.3);
  color: scolor(text);
}

QDialog QLabel
{
	color: scolor(text);
	font-size: 12px;
}

QDialog QPushButton
{
	background: rgba(0,0,0,.3);
	border: 2px solid transparent;
	border-radius: 4px;
	padding: 7px 14px;
	color: scolor(text);
	font-size: 12px;
}

QDialog QPushButton:hover,
QDialog QPushButton:focus
{
	border-color: scolor(accent);
}

QDialog QPushButton:focus
{
	background: scolor(accent);
	color: scolor(accent, light);
}

QDialog QGroupBox
{
  color: scolor(text);
}

#navigationbar
{
	border: none;
	background: scolor(main);
	padding: 0px;
	spacing: 0px;
}

#navigationbar::separator
{
	background: rgba(255,255,255,.6);
  	height: 1px;
  	margin: 0px 3px;
}

#navigationbar QToolButton,
#navigationbar ToolButton
{
	background: scolor(main);
	border: none;
	color: scolor(text);
	padding: 0px 7px;
  	height: 45px;
	font-size: 12px;
}

#navigationbar QToolButton:hover,
#navigationbar ToolButton:hover
{
	background: scolor(accent);
}

#navigationbar QToolButton:pressed,
#navigationbar ToolButton:pressed,
#navigationbar QToolButton:checked,
#navigationbar ToolButton:checked
{
	background: rgba(0,0,0,.7);
}

#navigationbar ToolButton::menu-indicator
{
	image: url(none.png);
}

#addressbar
{
	border: none;
	background: scolor(main);
	margin: 0px;
}

#addressbar QToolButton,
#addressbar QToolButton:hover
{
	border: none;
	background: transparent;
	color: scolor(text);
	font-size: 14px;
}

#navigationbar #addressbar QToolButton,
#navigationbar #addressbar QToolButton:hover
{
	border: none;
	background: scolor(accent);
	color: scolor(text);
	font-size: 14px;
	margin: 0px;
	padding: 0px;
}

#navigationbar #addressbar QLabel
{
	border: none;
	padding: 0px 10px;
	color: scolor(text);
	font-size: 18px;
}

QMenu::separator
{
	background: rgba(255,255,255,.6);
  	height: 1px;
  	margin: 0px 3px;
}

QMenu::item:selected
{
	background: rgb(0, 136, 249) repeat-x;
  	color: scolor(text);
}

QLineEdit
{
	padding: 4px 6px;
	color: scolor(text);
	background: transparent;
	border: 1px solid scolor(text);
	font-size: 12px;
	border-radius: 2px;
}

QComboBox {
	border: none;
	background: rgba(0,0,0,.4);
	padding: 1px 23px 1px 3px;
	min-width: 6em;
	color: scolor(text);
}

QComboBox::drop-down {
	border: none;
	subcontrol-origin: padding;
	subcontrol-position: top right;
	width: 20px;
}

QComboBox QAbstractItemView{
	border: none;
	background-color: scolor(second);
	color: scolor(text);
}

QCheckBox,
QRadioButton
{
	spacing: 7px;
	color: scolor(text);
	font-size: 12px;
}

QCheckBox:hover,
QRadioButton:hover
{
	color: scolor(text, dark);
}

QCheckBox:disabled,
QRadioButton:disabled
{
	color: scolor(main, dark);
}

QCheckBox::indicator,
QRadioButton::indicator
{
	width: 16px;
	height: 16px;
	border: 1px solid scolor(text);
	background: rgba(255,255,255,.1);
	padding: 1px;
	border-radius: 2px;
}

QCheckBox::indicator:disabled,
QRadioButton::indicator:disabled
{
	border-color: scolor(main, dark);
}

QRadioButton::indicator
{
	border-radius: 9px;
	padding: 3px;
	width: 13px;
	height: 13px;
}

QCheckBox::indicator:hover,
QRadioButton::indicator:hover
{
	background: scolor(main, dark);
}

QCheckBox::indicator:checked
{
	image: url(images/other/check.png);
	padding: 4px;
	width: 12px;
	height: 12px;
}

QRadioButton::indicator:checked
{
	image: url(images/other/round.png);
}


QScrollBar:vertical
{
	border: none;
	background: transparent;
	width: 17px;
	margin: 0px;
}

QScrollBar::handle:vertical
{
	background: rgba(255, 255, 255, .2);
	min-height: 50px;
	margin-right: 2px;
	border-radius: 7px;
	border: none;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical
{
	border: none;
	background: transparent;
	height: 0px;
	subcontrol-origin: margin;
}

QScrollBar::up-arrow:vertical,
QScrollBar::down-arrow:vertical
{
	border: none;
	width: 0px;
	height: 0px;
	background: transparent;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical
{
	background: none;
}

/* HORIZONTAL */
QScrollBar:horizontal
{
	border: none;
	background: transparent;
	height: 17px;
	margin: 0px;
}

QScrollBar::handle:horizontal
{
	background: rgba(255, 255, 255, .2);
	min-width: 50px;
	margin-bottom: 2px;
	border-radius: 7px;
	border: none;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal
{
	subcontrol-origin: margin;
	width: 0px;
	border: none;
	background: transparent;
}

QScrollBar:left-arrow:horizontal,
QScrollBar::right-arrow:horizontal
{
	border: none;
	width: 0px;
	height: 0px;
	background: rgba(0,0,0,0);
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal
{
	background: none;
}
