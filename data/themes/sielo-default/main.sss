#tabbarwidget * {
    background: scolor(second);
}

#tabbar {
	height: 28px;
}

QTabBar {
  border: none;
  background: scolor(second);
}

QTabBar::tab
{
    height: 28px;
    color: scolor(text);
}

QTabBar::tab:selected
{
    background: scolor(main);
}

QTabBar::tab:!selected
{
    background: transparent
}

QTabBar::tab:!selected:hover
{
    background: rgb(0, 136, 249) repeat-x;
}

#tabs-closebutton:hover
{
    border-radius: 0px;
    background-color: scolor(accent);
}

